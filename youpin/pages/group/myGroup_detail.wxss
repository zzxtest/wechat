/* pages/group/myGroup_detail.wxss */
@import "/common/wxss/common.wxss";
.prod-box{
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  
}
.prod-img{
  flex: 1;
  width: 150rpx;
  height: 175rpx;
}
.prod-info{
  flex: 3
}
.prod-name{
  font-size: 30rpx;
  color: #333333;
  min-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.prod-spec{
  font-size: 24rpx;
  color: #999999;
  margin: 5rpx 0 10rpx;
  min-height: 32rpx;
}
.prod-price{
  display: flex;
  
}
.price-box{
  flex: 3;
  font-size: 30rpx;
  color: #F55A52;
}
.price{
  font-size: 36rpx;
}
.price-old{
  font-size: 20rpx;
  color: #999999;
  text-decoration: line-through;
  margin-left: 28rpx;
}
.group-number{
  flex: 2;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  line-height: 48rpx;
}
.number{
  color: #F55A52;
}

.detail-info{
  position: relative;
  margin-top: 20rpx;
  padding-top: 100rpx;
  background-color: #fff;
}

.time-top{
  position: absolute;  
  text-align: center;  
  min-width: 570rpx;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
}
.time-title{
  font-size: 30rpx;
  color: #666666;
  letter-spacing: -0.42px;
  line-height: 40rpx;  
}
.time-title:after, .time-title:before {  
  background: #666666;  
  content: "";  
  height: 2rpx;  
  position: absolute;  
  top: 50%;  
  width: 100rpx;  
} 
.time-title:before {  
  left: 0rpx;  
}  
.time-title:after {  
  right: 0rpx;  
}
.time-tip{
  font-size: 26rpx;
  color: #666666;
  margin-top: 10rpx;
  text-align: center;
}

.user-box{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}
.user-item{
  margin: 0 15rpx;
  position: relative;
}
.user-img{
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto;
}
.user-name{
  max-width: 130rpx;
  margin: 0 auto;
  padding: 15rpx 0 30rpx;
  display: block;
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.share-btn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.group-join{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 36rpx;
  border-radius: 0;
}