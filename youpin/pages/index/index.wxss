/**index.wxss**/
@import "/common/wxss/common.wxss";

.index,page{
  background: #F5F5F5;
}
/*banner  */
.banner{
  width: 100%;
  height: 320rpx;
}
.banner-swiper{
  height: 100%;
}
.swiper-image{
  width: 100%;
  height: 100%;
}
/*活动入口  */
.inlet{
  display: flex;
  padding: 20rpx 0;
  background: #fff;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: -0.36px;
}
.inlet-btn{
  flex: 1;
  height: 100%;
  text-align: center;
}
.inlet-img{
  display: block;
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto 6rpx;
}
/*特价入口  */
.special{
  padding: 30rpx 0;
  position: relative;
}
.special-title{
  display: block;
  width: 332rpx;
  height: 34rpx;
  margin: 0 auto;
}
/*商品列表  */
.prod-item{
  position: relative;
  background: #fff;
  margin: 0 10rpx 10rpx 0;
  width: 370rpx;
  float: left;
}
.prod-item:nth-child(2n){
  margin-right: 0;
}
.prod-img{
  display: block;
  width: 100%;
  height: 370rpx;
}
.prod-name{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: -0.36px;
  line-height: 40rpx;
  padding: 0 10rpx;
  min-height: 80rpx;
}
.prod-price-box{
  padding: 10rpx;
  position: relative;
}
.price-box{
  font-size: 30rpx;
  color: #F55A52;
  letter-spacing: -0.36px;
  line-height: 21px;
}
.price{
  font-size: 36rpx;
}
.or-price{
  font-size: 26rpx;
  color: #999999;
  letter-spacing: -0.75px;
  text-decoration:line-through;
  margin-left: 32rpx;
}
.prod-btn{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 16rpx;
  bottom: 10rpx;
}
.prod-num-box{
  width: 156rpx;
  height: 48rpx;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: -0.36px;
}
.prod_icon,.prod-num{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.prod-num{
  line-height: 48rpx;
  padding-left: 15rpx;
}
.no-enough {
  height: 50rpx;
  font-size: 28rpx;
  color: #8f8f8f;
  text-align: center;
  padding: 10rpx 0;
}
/* 二维码  */
.scanCode-bg{
  width:100%;
  height:100%;
  position: fixed;
  z-index:999;
  background-color:rgba(15, 15, 26, 0.7);
  top: 0;
}
.scanCode-box{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); 
  width: 570rpx;
  height: 600rpx;
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
}
.scanCode-title{
  display: block;
  width: 208rpx;
  height: 200rpx;
  margin: 40rpx auto 20rpx;
}
.scanCode-tip{
  font-size: 30rpx;
  text-align: center;
}
.scanCode{
  display: block;
  width: 230rpx;
  height: 230rpx;
  margin: 20rpx auto;
}
.group-buying{
  background-color: #fff;
  width: 100%;
}
.scroll-view{
  width: 100%;
  white-space: nowrap;
}
.scroll-view-item{
  display: inline-block;
  width: 35%;
  overflow: hidden;
  margin-left: 30rpx;
  padding-bottom: 10rpx;
}
.group-img{
  display: block;
  width: 100%;
  height: 262rpx;
}
.group-name{
  width: 100%; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size:28rpx;
  color:#333333;
  line-height:40rpx;
  /* padding:0 10rpx; */
  margin-bottom: 10rpx;
}
.group-price{
  font-size:26rpx;
  color:#F55A52;
  letter-spacing:-0.36px;
  line-height:21px;
  /* padding:0 10rpx; */
  margin-bottom: 10rpx;
}
.group-or-price{
  font-size:22rpx;
  color:#999999;
  text-decoration:line-through;
  margin-left:15rpx;
}
.group-cdown{
  font-size: 26rpx;
  /* padding:0 10rpx; */
  color: #9d9d9d;
}
.cdown-tip{
  float: left;
  margin-right: 10rpx;
  line-height: 35rpx; 
}
.group-time{
  line-height: 35rpx; 
  float: left;
  background-color: #4c4c4c;
  color: #fff;
  font-size: 20rpx;
  padding: 0 6rpx;
  border-radius: 5rpx;
}
.group-unit{
  float: left;
  padding: 0 5rpx;
  line-height: 35rpx; 
}
.group-all{
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #333333;
}
.icon_r{
  width: 12rpx;
  height: 26rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}