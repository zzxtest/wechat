.refund{
  margin: 20rpx 0;
  padding: 0 30rpx;
  line-height: 98rpx;
  background: #fff;
  border-top: 1rpx #f2f2f2 solid;
  border-bottom: 1rpx #f2f2f2 solid;
  font-size: 30rpx;
  color: #ec696a;
  position: relative;
}
.icon_r{
  display: block;
  width: 14rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%); 
  
}
.refund-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 0;
}
.weui-input,.picker{
  width: 100%;
}