.login-bg{
  width:100%;
  height:100%;
  position: fixed;
  z-index:999;
  background-color:rgba(15, 15, 26, 0.7);
  top: 0;
}
.login-back{
  width: 100%;
  height: 100%;
}
.getPhone{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); 
  width: 530rpx;
  height: 300rpx;
  background-color: #FFF;
  border-radius: 20rpx;
  overflow: hidden
}
.getPhone button{
  width: 100%;
  height: 100rpx;
  background-color: #f55c52;
  color: #FFF;
  line-height: 100rpx;
  border-top-left-radius:0;
  border-top-right-radius:0;
}
.login-title{
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  font-weight: bold;
}
.login-logo{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 15rpx auto 30rpx;
}