/* pages/subOrder/subOrder.wxss */
.detail,page{
  background: #F5F5F5;
}
.personal{
  background-color: #fff;
  padding: 30rpx;
  position: relative;
}
.name-box,.address-box{
  font-size: 30rpx;
  display: flex;
}
.address-box{
  margin-top: 15rpx;
  /* position: relative; */
}
.empty-img{
  width: 398rpx;
  height: 102rpx;
  margin-left: 100rpx;
}

.title{
  flex: 1
}
.mobile,.address{
  flex: 4
}
.address{
  color: #999999;
  letter-spacing: -0.87px;
  padding-right: 26rpx;
}
.icon-r{
  width: 14rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.hr{
  width: 100%;
  height: 9rpx;
  display: block;
}
.IDcard-box{
  position: relative;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.IDcard-title{
  line-height: 55rpx;
}
.IDcard{
  width: 360rpx;
  height: 55rpx;
  line-height: 55rpx;
  margin-left: 20rpx;
}
.IDcard-btn{
  font-size: 30rpx;
  letter-spacing: -0.41px;
  width: 140rpx;
  height: 55rpx;
  line-height: 55rpx;
}
.Group{
  padding: 15rpx;
  width: 42rpx;
  height: 40rpx;
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
}
.prod-list{
  margin-top: 20rpx;
}
.prod-item{
  display: flex;
  padding: 30rpx;
  background-color: #fff;
}
.prod-img{
  flex: 1;
  width: 150rpx;
  height: 170rpx;
}
.prod-info{
  position: relative;
  flex: 3;
  padding-left: 10rpx;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: -0.41px;
}
.prod-name{
  line-height: 34rpx;
  margin-top: 10rpx;
  min-height: 68rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box;  
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2;
}

.prod-spec{
  font-size: 24rpx;
  color: #999999;
  letter-spacing: -0.41px;
  min-height: 28rpx;
}
.prod-price{
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: -0.41px;
}
.price-box{
  color: #F55C52;
}
.price{
  font-size: 36rpx;
}
.prod_icon{
  position: absolute;
  top: 0;
  left: 10rpx;
  top: 10rpx;
  height: 36rpx;
  width: 138rpx;
  display: block
}
.allot{
  background: #fff;
  padding: 0 30rpx;
  
  font-size: 30rpx;
  color: #333333;
  letter-spacing: -0.41px;
}
.allot-box{
  position: relative;
  border-top: 1px solid #EFEFEF;
  padding: 30rpx 30rpx 30rpx 0;
}
.shopping{
  height: 100%;
  width: 450rpx;
  text-align: right;
}
.shoppings{
  width: 100%;
  height: 100%;
}
.total{
  margin-top: 20rpx;
}
.total-box{
  border-top: none;
}
.order-price-box{
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 30rpx 60rpx;
  font-size: 30rpx;
  text-align: right;
}
.order-price{
  font-size: 36rpx;
  color: #F55A52;
  letter-spacing: -0.49px;
}
.pay-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}