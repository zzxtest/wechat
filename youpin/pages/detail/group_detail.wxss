/* pages/detail/group_detail.wxss */
@import "/common/wxss/common.wxss";
page{
  background: #F5F5F5;
  padding-bottom: 150rpx;
}
/*banner  */
.banner{
  width: 100%;
  height: 750rpx;
}
.banner-swiper{
  height: 100%;
}
.swiper-image{
  width: 100%;
  height: 100%;
}
.group-detail-info{
  padding: 30rpx 30rpx 0;
  background-color: #fff;
}
.prod-name{
  font-size: 32rpx;
  color: #030303;
}
.cdown{
  font-size: 26rpx;
  color: #9d9d9d;
  margin: 20rpx 0;
}
.cdown-tip{
  float: left;
  margin-right: 32rpx;
  line-height: 40rpx; 
}
.group-time{
  line-height: 40rpx; 
  float: left;
  background-color: #4c4c4c;
  color: #fff;
  font-size: 24rpx;
  padding: 0 6rpx;
  border-radius: 5rpx;
}
.group-unit{
  float: left;
  padding: 0 8rpx;
  line-height: 40rpx; 
}
.prod-price{
  display: flex;
  padding-bottom: 24rpx;
  
}
.price-box{
  flex: 3;
  font-size: 30rpx;
  color: #F55A52;
}
.price{
  font-size: 36rpx;
}
.price-old{
  font-size: 20rpx;
  color: #999999;
  text-decoration: line-through;
  margin-left: 28rpx;
}
.group-number{
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  line-height: 48rpx;
}
.prod-tip{
  padding: 20rpx 0;
  font-size: 13px;
  color: #666666;
  border-top: 1rpx solid #EFEFEF;
}
.tip-list{
  width: 100%;
  line-height: 40rpx;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
  margin-bottom: 15rpx;
}
.spot{
  display: block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #D8D8D8;
  margin: 14rpx 10rpx 14rpx 0;
}
.group-open-box{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.group-open-title{
  font-size: 13px;
  color: #999999;
  position: relative;
  padding: 30rpx 0;
}
.group-all{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #333333;
}
.icon_r{
  width: 12rpx;
  height: 26rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.group-open-list{
  width: 100%;
  height: 134rpx;
  overflow: hidden;
}
.swiper{
  height: 100%;
}
.group-open-item{
  display: flex;
  padding: 24rpx 0;
}

.user-info{
  flex: 1
}
.user-img{
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #333
}
.user-name{
  font-size: 30rpx;
  color: #333333;
  line-height: 80rpx;
  margin-left: 10rpx;
}
.group-numSurp-box{
  flex: 1;
  line-height: 80rpx;
}
.group-open-tip{
  font-size: 24rpx;
  color: #333333;
}
.group-numSurp{
  font-size: 32rpx;
  color: #F55A52;
}
.join-btn{
  font-size: 26rpx;
  line-height: 60rpx;
  margin: 10rpx 0 10rpx 20rpx;
}

.prod-detail{
  background-color: #FFF;
  margin-top: 20rpx;
}
.detail-title{
  padding: 30rpx;
  font-size: 30rpx;
  color: #666666;
  letter-spacing: -0.41px;
  border-bottom: 1rpx #F5F5F5 solid;
}
.detail-img{
  width: 100%;
  display: block;
}

.group-detail-btnBox{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 108rpx;
  background-color: #fff;
  font-size: 24rpx;
  text-align: center;
}
.my-group-btn{
  flex: 2;
  border-top: 1rpx solid #CCCCCC;
  border-right: 1rpx solid #CCCCCC;
  color: #666666;
}
.buy-prod-btn{
  flex: 2;
  border-top: 1rpx solid #CCCCCC;
  color: #666666;
}

.group-prod-btn{
  flex: 3;
  background: #F55A52;
  color: #fff;
}
.group-car-icon{
  display: block;
  width: 42rpx;
  height: 42rpx;
  margin: 15rpx auto 8rpx;
}
.buy-prod-price{
  color: #333333;
}
.first-text{
  font-size: 36rpx;
  margin-top: 15rpx;
}
.no-buy-btn{
  background-color: #f8f8f8;
  color: #CCCCCC;
}